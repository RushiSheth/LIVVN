<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e3040"
    tools:context=".Register">

    <ImageView
        android:id="@+id/loginn"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#014a46" />


    <ImageView
        android:id="@+id/loginlogo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="50dp"
        android:src="@drawable/transp_logo" />


    <EditText
        android:id="@+id/editEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/loginlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittextstyle"
        android:drawableLeft="@drawable/ic_action_user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16dp" />

    <View
        android:id="@+id/viewuser"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_below="@+id/editEmail"
        android:layout_centerHorizontal="true"
        android:background="#ffff" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/viewuser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextstyle"
        android:drawableLeft="@drawable/ic_action_pass"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <View
        android:id="@+id/viewpass"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_below="@+id/editPassword"
        android:layout_centerHorizontal="true"
        android:background="#ffff" />

    <Button
        android:id="@+id/SIGNUP"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonstyleselector"
        android:text="SIGNUP"
        android:textColor="#fff" />


    <ProgressBar
        android:id="@+id/Progressb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />


</RelativeLayout>