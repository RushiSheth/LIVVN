<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rescard"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eatery_image"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/ccd" />

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/eatery_image"
                android:fontFamily="@font/libre_franklin_bold"
                android:text="CAFE COFFEE DAY"
                android:textColor="#0e3040"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_text"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/eatery_image"
                android:fontFamily="@font/rubik_light"
                android:text="Cafeteria"
                android:textColor="#014a46"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/rateborder"
            android:text="@string/_3_5"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>